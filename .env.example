# Environment Variables Template
# Copy this file to .env and fill in your actual API keys and configuration

# Weather API Configuration (OpenWeatherMap)
# Get free API key from: https://openweathermap.org/api
WEATHER_API_KEY=your_openweathermap_api_key_here
WEATHER_API_BASE_URL=https://api.openweathermap.org/data/2.5

# Flight Data API Configuration (Skyscanner/Amadeus)
# Skyscanner: https://rapidapi.com/skyscanner/api/skyscanner-flight-search
# Amadeus: https://developers.amadeus.com/
FLIGHT_API_KEY=your_flight_api_key_here
FLIGHT_API_BASE_URL=your_flight_api_endpoint_here
FLIGHT_API_PROVIDER=skyscanner

# Cost of Living API Configuration (Teleport Public API)
# Teleport API is free and doesn't require authentication
# URL: https://developers.teleport.org/api/
COST_API_BASE_URL=https://api.teleport.org/api

# Caching Configuration
CACHE_DIR=.cache
FLIGHT_CACHE_TTL=3600
WEATHER_CACHE_TTL=21600
COST_CACHE_TTL=2592000

# Rate Limiting
API_RATE_LIMIT=50
API_RATE_PERIOD=60

# Database Configuration (if needed in future)
# DATABASE_URL=postgresql://user:password@localhost:5432/destinations_db

# Application Settings
APP_ENV=development
DEBUG=True
